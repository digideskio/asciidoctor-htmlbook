<%#encoding:UTF-8%><% 
if @document.doctitle
	chaptitle = @document.doctitle
elsif
	chaptitle = @document.attributes['docname']
else
	chaptitle = Time.now.tv_sec + @text.to_i
end
chaptitle = chaptitle.to_s.gsub(/[ \/\\<>"=\&:;]/, '_').downcase
chaptitle = chaptitle.gsub(/,/, '_')
%><a class="co" id="<%= %(co_#{chaptitle}_#{@id}) %>" href="<%= %(#callout_#{chaptitle}_#{@id}) %>"><img src="<%= %(callouts/#{@text}.png) %>" alt="<%= @text %>"/></a>
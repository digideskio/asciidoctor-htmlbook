<% if attr? 'style', 'source', false %>
<pre<%= @id && %( id="#{@id}") %> data-type="programlisting" data-code-language="<%= (attr 'language') %>"<%= attr?('role') ? %( class="#{attr 'role'}") : nil %>><%= content %></pre>
<% else %>
<pre<%= @id && %( id="#{@id}") %> data-type="programlisting"<%= attr?('role') ? %( class="#{attr 'role'}") : nil %>><%= content %></pre>
<% end %>
